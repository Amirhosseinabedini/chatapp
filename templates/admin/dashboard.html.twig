{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Admin Dashboard</h1>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>{{ stats.total_users }}</h4>
                            <p class="mb-0">Total Users</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>{{ stats.active_users }}</h4>
                            <p class="mb-0">Active Users</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-check fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>{{ stats.total_groups }}</h4>
                            <p class="mb-0">Total Groups</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>{{ stats.total_messages }}</h4>
                            <p class="mb-0">Total Messages</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-comments fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Users -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Recent Users</h5>
                </div>
                <div class="card-body">
                    {% if recent_users is not empty %}
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>User</th>
                                        <th>Status</th>
                                        <th>Joined</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for user in recent_users %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="{{ user.avatar ?: '/images/default-avatar.svg' }}" 
                                                     alt="{{ user.displayNameOrEmail }}" 
                                                     class="rounded-circle me-2" 
                                                     width="32" height="32"
                                                     onerror="this.src='/images/default-avatar.svg'">
                                                <div>
                                                    <div class="fw-bold">{{ user.displayNameOrEmail }}</div>
                                                    <small class="text-muted">{{ user.email }}</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            {% if user.isOnline %}
                                                <span class="badge bg-success">Online</span>
                                            {% else %}
                                                <span class="badge bg-secondary">Offline</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <small>{{ user.createdAt|date('M d, Y') }}</small>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="{{ path('app_admin_users') }}" class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                {% if 'ROLE_BANNED' not in user.roles %}
                                                    <button class="btn btn-outline-danger btn-sm" onclick="banUser({{ user.id }})">
                                                        <i class="fas fa-ban"></i>
                                                    </button>
                                                {% else %}
                                                    <button class="btn btn-outline-success btn-sm" onclick="unbanUser({{ user.id }})">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p class="text-muted">No users found.</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Recent Groups -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Recent Groups</h5>
                </div>
                <div class="card-body">
                    {% if recent_groups is not empty %}
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Group</th>
                                        <th>Owner</th>
                                        <th>Members</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for group in recent_groups %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="{{ group.avatar ?: '/images/default-avatar.svg' }}" 
                                                     alt="{{ group.name }}" 
                                                     class="rounded-circle me-2" 
                                                     width="32" height="32"
                                                     onerror="this.src='/images/default-avatar.svg'">
                                                <div>
                                                    <div class="fw-bold">{{ group.name }}</div>
                                                    {% if group.isPublic %}
                                                        <small class="text-success">Public</small>
                                                    {% else %}
                                                        <small class="text-muted">Private</small>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <small>{{ group.owner.displayNameOrEmail }}</small>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">{{ group.memberCount }}</span>
                                        </td>
                                        <td>
                                            <small>{{ group.createdAt|date('M d, Y') }}</small>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="{{ path('app_groups_show', {id: group.id}) }}" class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <button class="btn btn-outline-danger btn-sm" onclick="deleteGroup({{ group.id }})">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p class="text-muted">No groups found.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <a href="{{ path('app_admin_users') }}" class="btn btn-outline-primary w-100 mb-2">
                                <i class="fas fa-users me-2"></i>Manage Users
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('app_admin_groups') }}" class="btn btn-outline-info w-100 mb-2">
                                <i class="fas fa-users me-2"></i>Manage Groups
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('app_admin_reports') }}" class="btn btn-outline-warning w-100 mb-2">
                                <i class="fas fa-flag me-2"></i>View Reports
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('app_admin_logs') }}" class="btn btn-outline-secondary w-100 mb-2">
                                <i class="fas fa-file-alt me-2"></i>View Logs
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function banUser(userId) {
    const reason = prompt('Reason for banning this user:');
    if (reason === null) return;
    
    fetch(`/admin/users/${userId}/ban`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ reason: reason })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert('Error: ' + data.error);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Failed to ban user');
    });
}

function unbanUser(userId) {
    if (!confirm('Are you sure you want to unban this user?')) return;
    
    fetch(`/admin/users/${userId}/unban`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert('Error: ' + data.error);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Failed to unban user');
    });
}

function deleteGroup(groupId) {
    if (!confirm('Are you sure you want to delete this group? This action cannot be undone.')) return;
    
    fetch(`/admin/groups/${groupId}/delete`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert('Error: ' + data.error);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Failed to delete group');
    });
}
</script>
{% endblock %}

